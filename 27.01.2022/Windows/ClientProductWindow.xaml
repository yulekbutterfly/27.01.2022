<Window x:Class="_27._01._2022.Windows.ClientProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_27._01._2022.Windows"
        mc:Ignorable="d"
        Title="ClientProductWindow" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>
        <TextBlock Text="Список Аренды "
                  HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                  FontSize="20"/>
        <ListView x:Name="lvClientProduct"
                  Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Код" Width="150" DisplayMemberBinding="{Binding ID}"/>
                    <GridViewColumn Header="Код Клиента " Width="150" DisplayMemberBinding="{Binding IDClient}"/>
                    <GridViewColumn Header="Код Сотрудника" Width="150" DisplayMemberBinding="{Binding IDEmployee}"/>
                    <GridViewColumn Header="Код Товара" Width="150" DisplayMemberBinding="{Binding IDProduct}"/>
                    

                </GridView>
            </ListView.View>



        </ListView>


    </Grid>
</Window>
